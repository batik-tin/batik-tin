---
import { Instagram } from '@lucide/astro'

import { SITE_TITLE } from '../consts'
const today = new Date()
---

<footer class="border-t bg-slate-50">
  <div class="mx-auto max-w-5xl py-12">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
      {/* Brand */}
      <div class="col-span-2 space-y-4">
        <div class="flex items-center space-x-2">
          <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-blue-600">
            <span class="text-xs font-bold text-white">BTK</span>
          </div>
          <span class="text-xl font-bold">{SITE_TITLE}</span>
        </div>
        <p class="text-muted-foreground">
          Sharing knowledge and insights about web development and technology.
        </p>
        <div class="flex space-x-4">
          <a href="#" class="text-muted-foreground hover:text-blue-600">
            <Instagram class="h-5 w-5" />
          </a>
        </div>
      </div>

      {/* Navigation */}
      <div class="text-right">
        <h3 class="mb-4 font-semibold">Navigation</h3>
        <ul class="space-y-2">
          <li>
            <a href="/" class="text-muted-foreground hover:text-blue-600">Home</a>
          </li>
          <li>
            <a href="/blog" class="text-muted-foreground hover:text-blue-600">Blog</a>
          </li>
          <li>
            <a href="/about" class="text-muted-foreground hover:text-blue-600">About</a>
          </li>
          <li>
            <a href="/contact" class="text-muted-foreground hover:text-blue-600">Contact</a>
          </li>
        </ul>
      </div>

      {/* Categories */}
      <div class="text-right">
        <h3 class="mb-4 font-semibold">Categories</h3>
        <ul class="space-y-2">
          <li>
            <a href="/blog?category=technology" class="text-muted-foreground hover:text-blue-600">
              Technology
            </a>
          </li>
          <li>
            <a href="/blog?category=development" class="text-muted-foreground hover:text-blue-600">
              Development
            </a>
          </li>
          <li>
            <a href="/blog?category=design" class="text-muted-foreground hover:text-blue-600">
              Design
            </a>
          </li>
          <li>
            <a href="/blog?category=react" class="text-muted-foreground hover:text-blue-600">
              React
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="text-muted-foreground mt-12 border-t pt-8 text-center">
      <p>&copy; {today.getFullYear()} Batik. All rights reserved.</p>
    </div>
  </div>
</footer>
