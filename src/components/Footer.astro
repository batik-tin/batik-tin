---
import { Image } from 'astro:assets'
import logo from '../assets/logo.jpg'
import Instagram from '../assets/instagram.svg'
import WhatsApp from '../assets/whatsapp.svg'
import Peken from '../assets/peken.svg'

const today = new Date()
---

<footer class="m-4 border-t bg-slate-50 sm:m-0">
  <div class="mx-auto max-w-5xl py-12">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <div class="col-span-2 space-y-6">
        <div class="flex items-center gap-4">
          <Image src={logo} alt="Logo Batik Tin" class="h-16 w-16 rounded-full" />
          <span class="text-2xl font-bold">Batik Tin Gundih Surabaya</span>
        </div>

        <a
          href="https://maps.app.goo.gl/ZjqHXeoki4wNkWTd8"
          target="_blank"
          rel="noopener"
          class="text-muted-foreground transition-colors hover:text-pink-700"
        >
          Jl. Sumber Mulyo 5 No. 22, Gundih, Bubutan, Surabaya, Indonesia 60172
        </a>
      </div>

      <div class="text-right">
        <h3 class="mb-4 font-semibold">Hubungi Kami</h3>
        <ul class="space-y-2">
          <li>
            <a
              href="https://www.instagram.com/batiktin.surabaya/"
              target="_blank"
              rel="noopener"
              class="text-muted-foreground hover:text-pink-700"
            >
              <span class="inline-flex items-center gap-2 [&_*]:transition-colors">
                <Instagram />
                <span>Instagram</span>
              </span>
            </a>
          </li>

          <li>
            <a
              href="https://wa.me/6285895971980"
              target="_blank"
              rel="noopener"
              class="text-muted-foreground hover:text-pink-700"
            >
              <span class="inline-flex items-center gap-2 [&_*]:transition-colors">
                <WhatsApp />
                <span>WhatsApp</span>
              </span>
            </a>
          </li>

          <li>
            <a
              href="https://peken.surabaya.go.id/store/batik-tin-gundih"
              target="_blank"
              rel="noopener"
              class="text-muted-foreground fill-co hover:text-pink-700"
            >
              <span class="inline-flex items-center gap-2 [&_*]:transition-colors">
                <Peken />
                <span>PEKEN</span>
              </span>
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="text-muted-foreground mt-12 border-t pt-8 text-center">
      <p>&copy; {today.getFullYear()} Batik Tin</p>
    </div>
  </div>
</footer>
